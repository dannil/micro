scalar UUID @specifiedBy(url: "https://tools.ietf.org/html/rfc4122")

enum AccountEvent {
  ADDED
  DELETED
}

interface Account {
  id: ID!
  firstName: String!
  lastName: String!
  email: String!
}

#type AccountMe implements Account {
#  id: ID!
#  firstName: String!
#  lastName: String!
#  email: String!
#  secret: String!
#}

type Address {
  street: String!
  zipCode: String!
}

input AddressInput {
  street: String!
  zipCode: String!
}

type Query {
  accounts(id: UUID): [Account!]!
  me(id: UUID!): Account!
}

type Mutation {
  addAccount(firstName: String!, lastName: String!): Account!
  deleteAccount(id: UUID!): Account
}

type Subscription {
  accountSubscription(event: AccountEvent): Account!
}
